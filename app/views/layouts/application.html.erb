<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Temakeria</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.7 -->
  <%= stylesheet_link_tag "/bower_components/bootstrap/dist/css/bootstrap.min.css" %>
  <!-- Font Awesome -->
  <%= stylesheet_link_tag "/bower_components/font-awesome/css/font-awesome.min.css" %>
  <!-- Ionicons -->
  <%= stylesheet_link_tag "/bower_components/Ionicons/css/ionicons.min.css" %>
  <!-- Theme style -->
  <%= stylesheet_link_tag "/dist/css/AdminLTE.min.css" %>
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
  <%= stylesheet_link_tag "/dist/css/skins/_all-skins.min.css" %>
  <!-- Morris chart -->
  <%= stylesheet_link_tag "/bower_components/morris.js/morris.css" %>
  <!-- jvectormap -->
  <%= stylesheet_link_tag "/bower_components/jvectormap/jquery-jvectormap.css" %>
  <!-- Date Picker -->
  <%= stylesheet_link_tag "/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" %>
  <!-- Daterange picker -->
  <%= stylesheet_link_tag "/bower_components/bootstrap-daterangepicker/daterangepicker.css" %>
  <!-- bootstrap wysihtml5 - text editor -->
  <%= stylesheet_link_tag "/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" %>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Google Font -->
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic" %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>M</b>aki</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Temakis</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-user-o"></i> <span>Funcionarios</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="/funcionarios"><i class="fa fa-circle-o"></i> Geral</a></li>
            <li><a href="/garcoms"><i class="fa fa-circle-o"></i> Garçons</a></li>
            <li><a href="/administradors"><i class="fa fa-circle-o"></i> Administradores</a></li>
            <li><a href="/dependentes"><i class="fa fa-circle-o"></i> Dependentes</a></li>
          </ul>
        </li>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-home"></i> <span>Temakerias</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="/temakeria"><i class="fa fa-circle-o"></i> Geral</a></li>
            <li><a href="/temakeriacompraprodutos"><i class="fa fa-circle-o"></i> Compras</a></li>
            <li><a href="/armazenas"><i class="fa fa-circle-o"></i> Estoque</a></li>
          </ul>
        </li>
        <li class="treeview">
          <li><a href="/fornecedors"><i class="fa fa-support"></i> Fornecedores</a></li>
        </li>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-product-hunt"></i> <span>Produtos</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="/produtos"><i class="fa fa-circle-o"></i> Geral </a></li>
            <li><a href="/compoes"><i class="fa fa-circle-o"></i> Materia Prima x Produto</a></li>
          </ul>
        </li>
        <li class="treeview">
          <li><a href="/cardapios"><i class="fa fa-list"></i> Cardapio</a></li>
        </li>
        <li class="treeview">
          <li><a href="/promocaos"><i class="fa fa-tags"></i> Promoções</a></li>
        </li>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-dashboard"></i> <span>Mesas</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="/mesas"><i class="fa fa-circle-o"></i> Geral</a></li>
            <li><a href="/mesacompracardapios"><i class="fa fa-circle-o"></i> Compras</a></li>
            <li><a href="/apresenta"><i class="fa fa-circle-o"></i> Apresentar Promoçao</a></li>
            <li><a href="/atendes"><i class="fa fa-circle-o"></i> Garçons x Mesa</a></li>
          </ul>
        </li>
      </ul>
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%= yield %>
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Beta</b>
    </div>
    <strong>Guilherme Menge, Mariana Lima, Maria Eugenia e Mateus Maciel.</strong> All rights
    reserved.
  </footer>
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- jQuery 3 -->
<%= javascript_include_tag "/bower_components/jquery/dist/jquery.min.js" %>
<!-- jQuery UI 1.11.4 -->
<%= javascript_include_tag "/bower_components/jquery-ui/jquery-ui.min.js" %>
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
  $.widget.bridge('uibutton', $.ui.button);
</script>
<!-- Bootstrap 3.3.7 -->
<%= javascript_include_tag "/bower_components/bootstrap/dist/js/bootstrap.min.js" %>
<!-- Morris.js charts -->
<%= javascript_include_tag "/bower_components/raphael/raphael.min.js" %>
<%= javascript_include_tag "/bower_components/morris.js/morris.min.js" %>
<!-- Sparkline -->
<%= javascript_include_tag "/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js" %>
<!-- jvectormap -->
<%= javascript_include_tag "/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" %>
<%= javascript_include_tag "/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" %>
<!-- jQuery Knob Chart -->
<%= javascript_include_tag "/bower_components/jquery-knob/dist/jquery.knob.min.js" %>
<!-- daterangepicker -->
<%= javascript_include_tag "/bower_components/moment/min/moment.min.js" %>
<%= javascript_include_tag "/bower_components/bootstrap-daterangepicker/daterangepicker.js" %>
<!-- datepicker -->
<%= javascript_include_tag "/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js" %>
<!-- Bootstrap WYSIHTML5 -->
<%= javascript_include_tag "/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" %>
<!-- Slimscroll -->
<%= javascript_include_tag "/bower_components/jquery-slimscroll/jquery.slimscroll.min.js" %>
<!-- FastClick -->
<%= javascript_include_tag "/bower_components/fastclick/lib/fastclick.js" %>
<!-- AdminLTE App -->
<%= javascript_include_tag "/dist/js/adminlte.min.js" %>
<!-- AdminLTE dashboard demo (This is only for demo purposes) -->
<%= javascript_include_tag "/dist/js/pages/dashboard.js"%>
<!-- AdminLTE for demo purposes -->
<%= javascript_include_tag "/dist/js/demo.js"%>
</body>
</html>
